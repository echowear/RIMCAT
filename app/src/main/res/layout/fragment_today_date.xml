<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="636dp"
        android:layout_height="282dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/input_today_year"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="64dp"
                android:ems="10"
                android:hint="@string/birthday_year"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="35sp"
                app:layout_constraintStart_toEndOf="@+id/input_today_day"
                app:layout_constraintTop_toBottomOf="@+id/today_date_prompt"
                android:autofillHints="" />

            <TextView
                android:id="@+id/today_date_prompt"
                android:layout_width="548dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="335dp"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="337dp"
                android:layout_marginRight="337dp"
                android:text="@string/today_prompt"
                android:textSize="35sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/input_today_month"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:ems="10"
                android:hint="@string/birthday_month"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:textSize="35sp"
                app:layout_constraintEnd_toStartOf="@+id/input_today_day"
                app:layout_constraintTop_toBottomOf="@+id/today_date_prompt"
                android:autofillHints="" />

            <EditText
                android:id="@+id/input_today_day"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="309dp"
                android:layout_marginLeft="309dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="309dp"
                android:layout_marginRight="309dp"
                android:ems="10"
                android:hint="@string/birthday_day"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxLength="2"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today_date_prompt"
                android:autofillHints="" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>